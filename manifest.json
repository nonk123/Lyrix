{
    "manifest_version": 2,
    "name": "Lyrix",
    "version": "0.1.0",
    "description": "Adds a button to open the lyrics page for the played YouTube video.",
    "icons": {
        "48": "icons/48.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["worker.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["inject/youtube.js"]
        }
    ]
}
